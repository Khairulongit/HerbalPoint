<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context=".Admin.AdminCategoryActivity">


    <include layout="@layout/toolbar"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/interneton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/liner_category_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"

                    android:layout_marginTop="70dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/medicine"
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:src="@drawable/ayurvedicbig">

                    </ImageView>


                </LinearLayout>

                <!--    <Button-->
                <!--        android:id="@+id/check_productx_btn"-->
                <!--        android:layout_width="match_parent"-->
                <!--        android:layout_height="50dp"-->
                <!--        android:layout_above="@+id/modify_productx_btn"-->
                <!--        android:layout_gravity="center"-->
                <!--        android:layout_marginStart="20dp"-->
                <!--        android:layout_marginEnd="20dp"-->
                <!--        android:layout_marginBottom="20dp"-->
                <!--        android:background="@drawable/btn_back"-->
                <!--        android:text="View All Products"-->
                <!--        android:textColor="@android:color/white"-->
                <!--        android:textSize="15sp"-->
                <!--        android:textStyle="bold" />-->

                <Button
                    android:id="@+id/modify_productx_btn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_above="@+id/chk_orders_btn"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/btn_back"
                    android:text="Modify Products"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/chk_orders_btn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_above="@+id/chk_appointments"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/btn_back"
                    android:text="Check New Orders"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />


                <Button
                    android:id="@+id/chk_appointments"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_above="@+id/admin_logout"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/btn_back"
                    android:text="Check All Appointments"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/admin_logout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/btn_back"
                    android:text="Admin Logout"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/intermetoff"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/nointenet"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="200dp"
                    android:contentDescription="@string/app_name"
                    android:foregroundGravity="center_horizontal"
                    android:src="@drawable/nointernet"
                    >

                </ImageView>

            </LinearLayout>
        </LinearLayout>




    </ScrollView>

</RelativeLayout>