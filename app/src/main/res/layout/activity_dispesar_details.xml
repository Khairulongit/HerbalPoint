<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:animateLayoutChanges="true"
    android:gravity="center"
    tools:context=".DispesarDetailsActivit">


    <include layout="@layout/toolbar"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/interneton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/product_image_deytails"
                    android:layout_width="300dp"
                    android:layout_height="260dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginEnd="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/pharmacy"
                    app:shapeAppearanceOverlay="@style/Roundedsquare">

                </com.google.android.material.imageview.ShapeableImageView>


                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/product_image_deytails"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="10dp"
                    android:background="#ffffff"
                    android:orientation="vertical"
                    android:padding="18dp">


                    <TextView
                        android:id="@+id/booking_time"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/edit_text_round_gray_background"
                        android:drawableLeft="@drawable/ic_baseline_calendar_today_24"
                        android:drawablePadding="16dp"
                        android:hint="Time"
                        android:padding="12dp"
                        android:textColor="#38118C"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/disp_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/edit_text_round_gray_background"
                        android:drawableLeft="@drawable/ic_baseline_medication_24"
                        android:drawablePadding="16dp"
                        android:hint="Name"
                        android:inputType="text"
                        android:padding="12dp"
                        android:textColor="#38118C" />


                    <TextView
                        android:id="@+id/disp_addr"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="12dp"

                        android:background="@drawable/edit_text_round_gray_background"
                        android:drawableLeft="@drawable/ic_baseline_local_hospital_24"
                        android:drawablePadding="16dp"
                        android:hint="Address"
                        android:inputType="textMultiLine"
                        android:padding="12dp"
                        android:textColor="#38118C"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/disp_fees"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="12dp"

                        android:background="@drawable/edit_text_round_gray_background"
                        android:drawableLeft="@drawable/ic_rupee"
                        android:drawablePadding="16dp"
                        android:hint="Fees"
                        android:inputType="text"
                        android:padding="12dp"
                        android:textColor="#38118C"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/disp_patient_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="12dp"

                        android:background="@drawable/edit_text_round_gray_background"
                        android:drawableLeft="@drawable/ic_baseline_elderly_24"
                        android:drawablePadding="16dp"
                        android:hint="Patient's Name"
                        android:inputType="text"
                        android:padding="12dp"
                        android:textColor="#38118C"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/disp_patient_address"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="12dp"

                        android:background="@drawable/edit_text_round_gray_background"
                        android:drawableLeft="@drawable/ic_baseline_home_24"
                        android:drawablePadding="16dp"
                        android:hint="Patient's Address"
                        android:inputType="textMultiLine"
                        android:padding="12dp"
                        android:textColor="#38118C"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/disp_patient_contact"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="12dp"

                        android:background="@drawable/edit_text_round_gray_background"
                        android:drawableLeft="@drawable/ic_baseline_phone_android_24"
                        android:drawablePadding="16dp"
                        android:hint="Patient's Contact"
                        android:inputType="number"
                        android:padding="12dp"
                        android:textColor="#38118C"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/disp_patient_age"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="12dp"

                        android:background="@drawable/edit_text_round_gray_background"
                        android:drawableLeft="@drawable/ic_baseline_cake_24"
                        android:drawablePadding="16dp"
                        android:hint="Patient's Age"
                        android:inputType="number"
                        android:padding="12dp"
                        android:textColor="#38118C"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/disp_patient_typeofdisease"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="12dp"

                        android:background="@drawable/edit_text_round_gray_background"
                        android:drawableLeft="@drawable/ic_baseline_description_24"
                        android:drawablePadding="16dp"
                        android:hint="Type of Disease"
                        android:inputType="text"
                        android:padding="12dp"
                        android:textColor="#38118C"
                        android:textStyle="bold" />

                </LinearLayout>


                <!--    <com.google.android.material.floatingactionbutton.FloatingActionButton-->
                <!--        android:layout_width="wrap_content"-->
                <!--        android:layout_height="wrap_content"-->
                <!--        android:elevation="6dp"-->
                <!--        android:layout_alignParentBottom="true"-->
                <!--        android:layout_margin="15dp"-->
                <!--        android:id="@+id/add_product_to_cart"-->
                <!--        android:layout_alignParentRight="true"-->
                <!--        android:src="@drawable/nav_cart">-->

                <Button
                    android:id="@+id/add_product_to_cart"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center|center_horizontal"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="77dp"
                    android:background="@drawable/btn_back"
                    android:text="Add Item To Cart"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/internetoff"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/nointenet"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="200dp"
                    android:contentDescription="@string/app_name"
                    android:foregroundGravity="center_horizontal"
                    android:src="@drawable/nointernet"
                    >

                </ImageView>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</RelativeLayout>